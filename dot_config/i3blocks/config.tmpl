# vim: ft=config

[spotify]
label=
command=~/.config/i3blocks/scripts/spotify
color=#81b71a
interval=5

[cpu_usage]
label=
markup=pango
interval=1
command=~/.config/i3blocks/scripts/cpu
min_width=⣾⣄ 100%

[cpu_temp]
label=
interval=1
command=~/.config/i3blocks/scripts/temp
markup=pango

[ram]
label=
interval=1
command=~/.config/i3blocks/scripts/ram

{{ if eq .chezmoi.hostname "rgertenbach3" "corgi" }}
[battery]
command=~/.config/i3blocks/scripts/battery
markup=pango
interval=30
{{ end }}

[wifi]
label=
command=~/.config/i3blocks/scripts/wifi
interval=10
markup=pango

[time]
command=echo $(date '+%Y-%m-%d %H:%M')
interval=1
markup=pango
